<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rain.com.dribbble_client">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.activitys.LoginActivity"></activity>
        <activity android:name=".ui.activitys.MainActivity"></activity>
        <activity android:name=".ui.activitys.SplashActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"></category>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activitys.ShotsDetailsActivity"></activity>
    </application>

</manifest>